{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动前端",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "pwsh",
            "runtimeArgs": [
                "-Command",
                "yarn run dev --port 8080"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "启动服务器",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/index.js",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/.bin/nodemon",
            "runtimeArgs": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "启动MParser",
            "cwd": "${workspaceFolder}/MParser/server",
            "runtimeExecutable": "${workspaceFolder}/MParser/server/node_modules/.bin/nodemon",
            "runtimeArgs": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "启动NDSGateway",
            "cwd": "${workspaceFolder}/MParser/nodes/NDSGateway",
            "runtimeExecutable": "pwsh",
            "runtimeArgs": [
                "-Command",
                "./venv/Scripts/python main.py"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "dependsOn": ["启动MParser"]
        }
    ],
    "compounds": [
        {
            "name": "所有服务",
            "configurations": [
                "启动前端",
                "启动服务器",
                "启动MParser",
                "启动NDSGateway"
            ],
            "stopAll": true,
            "presentation": {
                "order": 1,
                "group": "launch"
            }
        }
    ]
}